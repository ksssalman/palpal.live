# Work Tracker Firebase Configuration
# Copy this file to .env and fill in your Firebase credentials

# Firebase Web API Key - Get from Firebase Console > Project Settings
VITE_FIREBASE_API_KEY=

# Firebase Authentication Domain
VITE_FIREBASE_AUTH_DOMAIN=

# Firebase Project ID
VITE_FIREBASE_PROJECT_ID=

# Cloud Storage Bucket (for future file storage)
VITE_FIREBASE_STORAGE_BUCKET=

# Firebase Cloud Messaging Sender ID
VITE_FIREBASE_MESSAGING_SENDER_ID=

# Firebase App ID
VITE_FIREBASE_APP_ID=

# (Optional) Google Analytics Measurement ID
VITE_FIREBASE_MEASUREMENT_ID=

# App Configuration
# Use /projects/work-tracker/ when running within palpal.live
# Use / when running standalone
VITE_BASE_PATH=/
